<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tabs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kakao_yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomtoolBarTextStyle</item>
        <item name="searchViewStyle">@style/MySearchViewTheme</item>
    </style>

    <style name="CustomtoolBarTextStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="colorPrimary">@color/kakao_yellow</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="MySearchViewTheme" parent="Widget.AppCompat.SearchView">
        <!-- Changes icons color -->
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textColorSecondary" > @color/black </item>
        <item name="colorControlNormal">@color/black</item> <!-- 비활성 아이콘 색상 -->
        <item name="colorControlActivated">@color/black</item>
    </style>
    <!-- CalendarView 테마 오버레이 -->
    <style name="MyCalendarViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- 선택된 날짜의 색상 -->
        <item name="android:colorAccent">@color/purple_700</item>
        <!-- 일반 날짜의 색상 -->
        <item name="android:colorControlNormal">@color/black</item>
        <!-- 월과 년의 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 년도 선택 시의 색상 -->
        <item name="android:yearListSelectorColor">@color/kakao_yellow</item>
        <!-- 날짜의 텍스트 스타일 -->
        <item name="android:dateTextAppearance">@style/MyDateTextAppearance</item>
        <!-- 요일의 텍스트 스타일 -->
        <item name="android:weekDayTextAppearance">@style/MyWeekDayTextAppearance</item>
    </style>

    <!-- 날짜의 텍스트 스타일 -->
    <style name="MyDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 요일의 텍스트 스타일 -->
    <style name="MyWeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>